{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessageLowerCase": "never",
  "configMigration": true,
  "extends": [
    ":dependencyDashboard",
    ":gitSignOff",
    ":prConcurrentLimitNone",
    "schedule:weekly",
    "workarounds:all"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "rangeStrategy": "bump",
      "semanticCommitScope": "deps"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "matchPackageNames": ["react"],
      "rangeStrategy": "widen"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "development dependencies",
      "rangeStrategy": "pin",
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchDepTypes": ["engines", "packageManager"],
      "matchFileNames": ["package.json"],
      "groupName": "development dependencies",
      "rangeStrategy": "pin",
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchManagers": ["docker-compose", "github-actions", "nodenv"],
      "groupName": "development dependencies",
      "rangeStrategy": "pin",
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchPackageNames": ["@bufbuild/*"],
      "groupName": "buf",
      "semanticCommitScope": "deps"
    },
    {
      "matchPackageNames": ["@connectrpc/*"],
      "groupName": "connect",
      "semanticCommitScope": "deps"
    },
    {
      "matchPackageNames": ["@grpc/*"],
      "groupName": "grpc",
      "semanticCommitScope": "deps"
    },
    {
      "matchPackageNames": ["@opentelemetry/*"],
      "groupName": "opentelemetry",
      "semanticCommitScope": "deps"
    },
    {
      "matchPackageNames": ["yaml"],
      "groupName": "yaml",
      "semanticCommitScope": "deps"
    },
    {
      "description": "@types/node should match the Node.js version",
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "https://github.com/renovatebot/renovate/issues/37211",
      "matchPackageNames": ["traefik"],
      "enabled": false
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "reviewers": ["haines"],
  "semanticCommitType": "chore"
}
