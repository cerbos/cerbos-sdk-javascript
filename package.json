{
  "name": "cerbos-sdk-javascript",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": "21.6.1",
    "pnpm": "8.15.3"
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf api packages/*/lib",
    "docs": "pnpm run build && pnpm run docs:extract-api && pnpm run docs:generate && pnpm run docs:fixup",
    "docs:extract-api": "pnpm --filter=!./packages/test --parallel exec api-extractor run",
    "docs:fixup": "scripts/sed-all docs 's/\\r$//'",
    "docs:generate": "api-documenter markdown --input-folder api --output-folder docs",
    "generate": "pnpm run generate:clean && pnpm run generate:buf && pnpm run generate:format",
    "generate:buf": "pnpm run all:parallel 'pnpm:generate:buf:*'",
    "generate:buf:core": "buf generate --template=packages/core/buf.gen.yaml proto",
    "generate:buf:embedded": "buf generate --template=packages/embedded/buf.gen.yaml proto",
    "generate:buf:files": "buf generate --template=packages/files/buf.gen.yaml proto",
    "generate:buf:grpc": "buf generate --template=packages/grpc/buf.gen.yaml proto",
    "generate:buf:http": "buf generate --template=packages/http/buf.gen.yaml proto",
    "generate:buf:test": "buf generate --template=packages/test/buf.gen.yaml proto",
    "generate:clean": "rm -rf packages/*/src/protobuf",
    "generate:format": "prettier --write packages/*/src/protobuf",
    "lint": "pnpm run all:parallel 'pnpm:lint:check:*'",
    "lint:check:eslint": "eslint --max-warnings=0 .",
    "lint:check:prettier": "prettier --check .",
    "lint:fix": "pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
    "lint:fix:eslint": "eslint --fix --max-warnings=0 .",
    "lint:fix:prettier": "prettier --write .",
    "postinstall": "pnpm run build",
    "proto": "pnpm run proto:clean && pnpm run proto:export",
    "proto:clean": "rm -rf proto",
    "proto:export": "pnpm run all:parallel 'pnpm:proto:export:*'",
    "proto:export:cerbos": "buf export --output=proto buf.build/cerbos/cerbos-api",
    "proto:export:jaeger": "buf export --exclude-imports --output=proto/jaeger --path=proto/api_v3/query_service.proto https://github.com/jaegertracing/jaeger-idl.git",
    "proto:export:opentelemetry": "buf export --output=proto 'https://github.com/open-telemetry/opentelemetry-proto.git#tag=v1.0.0'",
    "test": "pnpm run --workspace=packages/test test",
    "test:servers:start": "pnpm run --workspace=packages/test test:servers:start",
    "test:servers:stop": "pnpm run --workspace=packages/test test:servers:stop",
    "test:watch": "pnpm run --workspace=packages/test test:watch"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "7.23.23",
    "@microsoft/api-extractor": "7.40.1",
    "@tsconfig/node18": "18.2.2",
    "@types/node": "18.19.15",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-tsdoc": "0.2.17",
    "prettier": "3.2.5",
    "prettier-plugin-pkg": "0.18.1",
    "ts-jest": "29.1.2",
    "ts-proto": "1.167.3",
    "typescript": "5.3.3"
  }
}
