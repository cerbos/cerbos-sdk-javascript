{
  "name": "cerbos-sdk-javascript",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "20.5.1",
    "npm": "9.8.1"
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "all:serial": "concurrently --max-processes=1 --prefix=none",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf api packages/*/lib",
    "docs": "npm run build && npm run docs:extract-api && npm run docs:generate && npm run docs:fixup",
    "docs:extract-api": "npm run all:parallel 'npm:docs:extract-api:*'",
    "docs:extract-api:core": "npm --workspace=packages/core exec api-extractor run",
    "docs:extract-api:files": "npm --workspace=packages/files exec api-extractor run",
    "docs:extract-api:grpc": "npm --workspace=packages/grpc exec api-extractor run",
    "docs:extract-api:http": "npm --workspace=packages/http exec api-extractor run",
    "docs:extract-api:lite": "npm --workspace=packages/lite exec api-extractor run",
    "docs:extract-api:opentelemetry": "npm --workspace=packages/opentelemetry exec api-extractor run",
    "docs:fixup": "scripts/sed-all docs 's/\\r$//'",
    "docs:generate": "api-documenter markdown --input-folder api --output-folder docs",
    "generate": "npm run generate:clean && npm run generate:buf && npm run generate:format",
    "generate:buf": "npm run all:parallel 'npm:generate:buf:*'",
    "generate:buf:core": "buf generate --template=packages/core/buf.gen.yaml proto",
    "generate:buf:files": "buf generate --template=packages/files/buf.gen.yaml proto",
    "generate:buf:grpc": "buf generate --template=packages/grpc/buf.gen.yaml proto",
    "generate:buf:http": "buf generate --template=packages/http/buf.gen.yaml proto",
    "generate:buf:lite": "buf generate --template=packages/lite/buf.gen.yaml proto",
    "generate:buf:test": "buf generate --template=packages/test/buf.gen.yaml proto",
    "generate:clean": "rm -rf packages/*/src/protobuf",
    "generate:format": "prettier --write packages/*/src/protobuf",
    "lint": "npm run all:parallel 'npm:lint:check:*'",
    "lint:check:eslint": "eslint --max-warnings=0 .",
    "lint:check:prettier": "prettier --check .",
    "lint:fix": "npm run all:serial 'npm:lint:fix:*'",
    "lint:fix:eslint": "eslint --fix --max-warnings=0 .",
    "lint:fix:prettier": "prettier --write .",
    "postinstall": "patch-package --error-on-warn --error-on-fail && npm run build",
    "proto": "npm run proto:clean && npm run proto:export",
    "proto:clean": "rm -rf proto",
    "proto:export": "npm run all:parallel 'npm:proto:export:*'",
    "proto:export:cerbos": "buf export --output=proto buf.build/cerbos/cerbos-api",
    "proto:export:jaeger": "buf export --exclude-imports --output=proto/jaeger --path=proto/api_v3/query_service.proto https://github.com/jaegertracing/jaeger-idl.git",
    "proto:export:opentelemetry": "buf export --output=proto 'https://github.com/open-telemetry/opentelemetry-proto.git#tag=v1.0.0'",
    "test": "npm run --workspace=packages/test test",
    "test:servers:start": "npm run --workspace=packages/test test:servers:start",
    "test:servers:stop": "npm run --workspace=packages/test test:servers:stop",
    "test:watch": "npm run --workspace=packages/test test:watch"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "7.22.33",
    "@microsoft/api-extractor": "7.36.4",
    "@tsconfig/node16": "16.1.1",
    "@types/node": "16.18.42",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "concurrently": "8.2.1",
    "eslint": "8.47.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-tsdoc": "0.2.17",
    "patch-package": "8.0.0",
    "prettier": "3.0.2",
    "prettier-plugin-pkg": "0.18.0",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "ts-proto": "1.156.3",
    "typescript": "5.1.6"
  },
  "overrides": {
    "@microsoft/api-extractor": {
      "semver": "7.5.4"
    },
    "@rushstack/node-core-library": {
      "semver": "7.5.4"
    }
  }
}
