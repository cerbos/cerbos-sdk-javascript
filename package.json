{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "boilerplate": "ts-node scripts/boilerplate.ts",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf packages/*/lib",
    "lint": "concurrently --group --prefix=none 'npm:lint:check:*'",
    "lint:check:eslint": "eslint --max-warnings=0 .",
    "lint:check:prettier": "prettier --check .",
    "lint:fix": "concurrently --max-processes=1 --prefix=none 'npm:lint:fix:*'",
    "lint:fix:eslint": "eslint --fix --max-warnings=0 .",
    "lint:fix:prettier": "prettier --write .",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@tsconfig/node18": "^1.0.0",
    "@types/node": "^14.18.18",
    "@types/prettier": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "concurrently": "^7.2.0",
    "eslint": "^8.15.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "prettier": "^2.6.2",
    "prettier-plugin-pkg": "^0.13.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
