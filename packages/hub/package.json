{
  "name": "@cerbos/hub",
  "version": "0.4.0",
  "type": "module",
  "description": "Client library for interacting with Cerbos Hub from server-side Node.js applications",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerbos/cerbos-sdk-javascript.git",
    "directory": "packages/hub"
  },
  "homepage": "https://github.com/cerbos/cerbos-sdk-javascript/tree/main/packages/hub#readme",
  "bugs": {
    "url": "https://github.com/cerbos/cerbos-sdk-javascript/issues"
  },
  "author": "Cerbos <help@cerbos.dev> (https://cerbos.dev)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 20"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./~internal": {
      "types": "./lib/internal.d.ts",
      "default": "./lib/internal.js"
    },
    "./~internal/transport": {
      "node": {
        "types": "./lib/transport/node.d.ts",
        "default": "./lib/transport/node.js"
      },
      "default": {
        "types": "./lib/transport/web.d.ts",
        "default": "./lib/transport/web.js"
      }
    }
  },
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "src/**/*.ts"
  ],
  "keywords": [
    "Cerbos",
    "Cerbos Hub",
    "authorization",
    "access control",
    "roles",
    "permissions",
    "policy",
    "security",
    "role-based access control",
    "RBAC",
    "attribute-based access control",
    "ABAC",
    "policy decision point",
    "PDP"
  ],
  "peerDependencies": {
    "@bufbuild/protobuf": "^2.10.2"
  },
  "dependencies": {
    "@cerbos/core": "^0.26.0",
    "@connectrpc/connect": "^2.1.1",
    "@connectrpc/connect-node": "^2.1.1",
    "@connectrpc/connect-web": "^2.1.1",
    "@connectrpc/validate": "^0.2.0",
    "opossum": "^9.0.0"
  },
  "devDependencies": {
    "@types/opossum": "8.1.9"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
